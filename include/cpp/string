#ifndef STRING_
#define STRING_

#include <stdexcept>
#include <impl/string/basic_string.h>
// NOTE: the implementation is here to circumvent problems with the exceptions. because
// stdexcept needs string and string needs stdexcept. But it is sufficient for stdexcept
// to have the declaration of string. Therefore we put the declaration in
// impl/string/basic_string.h, include that in stdexcept.cpp and include the implementation
// of string here
#include "../../lib/cpp/src/string.cc"

#endif /* STRING_ */

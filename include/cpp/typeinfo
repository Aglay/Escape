#ifndef TYPEINFO_
#define TYPEINFO_

#include <stddef.h>

namespace std {
	class type_info {
	public:
		virtual ~type_info();
		bool operator==(const type_info& rhs) const;
		bool operator!=(const type_info& rhs) const;
		bool before(const type_info& rhs) const;
		const char* name() const;
	private:
		type_info(const type_info& rhs);
		type_info& operator=(const type_info& rhs);
	};
}

#endif /* TYPEINFO_ */

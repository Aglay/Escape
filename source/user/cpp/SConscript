# -*- Mode: Python -*-

Import('env')

if env['ARCH'] == 'i586':
	env.SConscript(env.Glob('*/SConscript'), 'env')
elif env['ARCH'] == 'eco32':
	for f in ['init', 'less', 'libcpptest', 'ls', 'ps', 'sort', 'ts', 'top']:
		env.SConscript(f + '/SConscript', 'env')
else:
    # TODO mmix-ld is unable to link some c++ apps
    for f in ['init', 'less', 'ls', 'ps', 'sort', 'ts', 'top']:
        env.SConscript(f + '/SConscript', 'env')
